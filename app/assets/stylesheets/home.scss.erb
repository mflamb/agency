// all the styles related to the home controller here.

body {
  position: relative;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  font-family: 'Roboto', sans-serif;
  background-color: #FEFCFC;
}

#body-grid {
  display: grid;
  grid-template-rows: .1fr 2fr .6fr;
  height: auto;
  width: auto;
}

.landing {
  position: relative;
  height: min-content;
  width: fit-content;
  margin-left: 1.5%;
  margin: 0 auto;
  margin-top: 3%;
  margin-bottom: 5%;
  padding: 10%;
  color: #40404c;
  mix-blend-mode: screen;
  background-color: rgb(250, 241, 238);
  border: 3px solid #40404c;
}

section {
  width: 100%;
  height: 100vh;
  padding: 0 5%;
}

section.main-background {
  height: auto;
}

section.float-container {
  height: 80vh;
}

.header {
  grid-row: 1;
  background-color: #40404c;
  color: #FEFCFC;
  border-bottom: 2.5px solid #ffa5a5;
  border-top: 2.5px solid #ffa5a5;
}

nav {
  width: 100vw;
}

.border-right {
  padding-right: 15px;
  border-right: 1px solid #ffa5a5;
}

.main-background {
  background-image: url(<%= asset_path 'front-doors.jpg' %>);
  background-size: cover;
  flex: 1 0 auto;
  grid-row: 2/3;
}

h1, h2, h3 {
  font-family: 'PT Serif', serif;
  color: #40404c;
}

.logo-big {
  font-size: 125px;
  font-weight: 900;
  letter-spacing: 5px;
  text-transform: capitalize;
  // opacity: 0.8;
}

.logo-small {
  font-size: 24px;
  font-weight: 900;
}

.cover-text-p {
  font-size: 20px;
  font-weight: 900;
}

.nav-list {
  list-style-type: none;
}

.nav-list li {
  display: inline;
  margin: 0 5px;
}

.nav-list li a {
  text-decoration: none;
}

.nav-list li a:hover {
  color: #ffa5a5;
}

.yield-content {
  width: 100vw;
  height: auto;
  flex: 1 0 auto;
}

.thanks-list {
  list-style-type: none;
}

.float-container {
  display: flex;
  flex-direction: row;
  flex-shrink: 0;
  background-color: #ffa5a5;
  border-top: 2.5px solid #FEFCFC;
}

.float {
  position: relative;
  flex-shrink: 0;
  width: 250px;
  height: 250px;
  margin: 4em auto;
  color: #FEFCFC;
  font-weight: 900;
}

div.footer {
  position: absolute;
  bottom: 0;
  width: 100vw;
  min-height: 250px;
  margin-top: 2%;
  display: flex;
  flex-direction: row;
  flex-shrink: 0;
  text-align: center;
  background-color: #40404c;
  color: #FEFCFC;
  border-top: 2.5px solid #FEFCFC;
  grid-row: 3;
}

ul.footer-list, ul.footer-list3 {
  list-style-type: none;
  align-self: center;
  flex-grow: 1;
}

.footer-list li {
  display: inline;
}

.footer-list li a {
  text-decoration: none;
}

.footer-list li a:hover {
  color: #ffa5a5;
}

.footer-list3 li {
  display: inline;
}

.footer-list3 li a {
  text-decoration: none;
}

img.sm-icons {
  width: 30px;
  float: left;
  margin: 15px;
  padding: 3.5px;
  background-color: #ffa5a5;
  border-radius: 10%;
}

img.thanks-icons {
  width: 125px;
  margin-bottom: 5%;
}
